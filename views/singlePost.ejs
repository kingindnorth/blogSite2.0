<!-- Page Header -->
<header class="page-header page-header-mini">
    <h1 class="title"><%= blog.title%></h1>
</header>
<!-- End Of Page Header -->

<section class="container">
    <div class="page-container">
        <div class="page-content">
            <div class="card">
                <div class="card-header pt-0">
                    <h3 class="card-title mb-4"><%= blog.title%></h3>
                    <div class="blog-media mb-4">
                        <img src= <%= `/assets/imgs/${blog.image}`%> alt="" class="w-100">
                        <a href="#" class="badge badge-primary">#<%= blog.tag%></a> 
                    </div>  
                    <small class="small text-muted">
                        <a href="#" class="text-muted"><%= blog.user%></a>
                        <span class="px-2">·</span>
                        <span>January 24 2019</span>
                        <span class="px-2">·</span>
                        <a href="#" class="text-muted"><%= blog.comment.length%> comments</a>
                    </small>
                </div>
                <div class="card-body border-top">
                    <p><%= blog.data%></p>
                </div>
                
                <div class="card-footer">
                     <h6 class="mt-5 mb-3 text-center"><a href="#" class="text-dark"><%= blog.comment.length%> comments</a></h6>
                    <hr>
                    <div class="media">
                        <img src="assets/imgs/avatar-1.jpg" class="mr-3 thumb-sm rounded-circle" alt="...">
                        <div class="media-body">
                            <h6 class="mt-0">Janice Wilder</h6>
                            <p>Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin.</p>
                            <a href="#" class="text-dark small font-weight-bold"><i class="ti-back-right"></i> Replay</a>
                            <div class="media mt-5">
                                <a class="mr-3" href="#">
                                <img src="assets/imgs/avatar.jpg" class="thumb-sm rounded-circle" alt="...">
                                </a>
                                <div class="media-body align-items-center">
                                    <h6 class="mt-0">Joe Mitchell</h6>
                                    <p>Fusce condimentum nunc ac nisi vulputate fringilla. Donec lacinia congue felis in faucibus</p>
                                    <a href="#" class="text-dark small font-weight-bold"><i class="ti-back-right"></i> Replay</a>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="media mt-5">
                        <img src="assets/imgs/avatar-2.jpg" class="mr-3 thumb-sm rounded-circle" alt="...">
                        <div class="media-body">
                            <h6 class="mt-0">Crosby Meadows</h6>
                            <p>Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin.</p>
                            <a href="#" class="text-dark small font-weight-bold"><i class="ti-back-right"></i> Replay</a>
                        </div>
                    </div>
                    <div class="media mt-4">
                        <img src="assets/imgs/avatar-3.jpg" class="mr-3 thumb-sm rounded-circle" alt="...">
                        <div class="media-body">
                            <h6 class="mt-0">Jean Wiley</h6>
                            <p>Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin.</p>
                            <a href="#" class="text-dark small font-weight-bold"><i class="ti-back-right"></i> Replay</a>
                        </div>
                    </div>

                    <h6 class="mt-5 mb-3 text-center"><a href="#" class="text-dark">Write Your Comment</a></h6>
                    <hr>
                    <form>
                        <div class="form-row">
                            <div class="col-12 form-group">
                                <textarea name="" id="" cols="30" rows="10" class="form-control" placeholder="Enter Your Comment Here"></textarea>
                            </div>
                            <div class="form-group col-12">
                                <button class="btn btn-primary btn-block">Post Comment</button>
                            </div>
                        </div>
                    </form>
                </div>                  
            </div> 

            <h6 class="mt-5 text-center">Related Posts</h6>
            <hr>
            <div class="row">   
                <% tags.forEach(blog=>{ %>                    
                <div class="col-md-6 col-lg-4 d-none d-lg-block">
                    <div class="card mb-5">
                        <a href=<%= `/${blog.id}`%>><div class="card-header p-0">                                   
                            <div class="blog-media">
                                <img src=<%= `/assets/imgs/${blog.image}`%> alt="" class="w-100">
                                <a href="#" class="badge badge-primary">#<%= blog.tag%></a>       
                            </div>  
                        </div></a>
                        <div class="card-body px-0">
                            <h6 class="card-title mb-2"><%= blog.title%></h6>   
                            <small class="small text-muted">January 17 2019 
                                <span class="px-2">-</span>
                                <a href="#" class="text-muted"> <%= blog.comment.length %> Comments</a>
                            </small>
                        </div>  
                    </div>
                </div>
                <% })%>
            </div>
        </div>
        <!-- Sidebar -->
        <div class="page-sidebar">
            <h6 class="sidebar-title mt-5 mb-4">Tags</h6>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#open-AI</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#back-end</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#front-end</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#AI/ML</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#tech</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#developer</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#computer science</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#3D</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#maths</a>
            <a href="javascript:void(0)" class="badge badge-primary m-1">#self-growth</a>

            <div class="ad-card d-flex text-center align-items-center justify-content-center mt-4">
                <span href="#" class="font-weight-bold">ADS</span>
            </div>
            <br>
        </div>
    </div>
    <div class="ad-card d-flex text-center align-items-center justify-content-center mt-4">
        <span href="#" class="font-weight-bold">ADS</span>
    </div>
</section>
